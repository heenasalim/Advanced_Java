		   String pass=request.getParameter("pass");
		   Statement  smt=con.createStatement();
		   ResultSet rs=smt.executeQuery("select  *from login  username,password");
		   if(user.equals(rs.getString(1)) &&  pass.equals(rs.getInt(2)))
