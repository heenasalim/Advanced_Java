   			repaint();
   			
   	  }
  //    else
   //   {
   // 	   
    //	    g.fillOval(x3, 70, 30, 30);
    //  }
		//}
    
    
      if(c.equals("green"))
	  {	
    	//  g.setColor(Color.red);
    	   
    	 // g.fillOval(x4, 40, 30, 30);
    	 	  
    	  g.setColor(Color.green);
