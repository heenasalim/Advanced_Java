}
@Override
	public void run() {
		// TODO Auto-generated method stub
while(true)
{
	try
	{
		if(Thread.currentThread()==t1)
		{
			
			//Thread.holdsLock(t1);
		
			if(x1!=300)
			x1++;
			if(x1==300  && c.equals("red"))
		    x1=300;
			//Thread.sleep(20);
		    if(x1==300  && c.equals("green"))
		    x1++;
		    repaint();
			Thread.sleep(10);	
			}
			
		
		if(Thread.currentThread()==t2)
		{
			 if(x2!=800)
					x2--;
					if(x2==800  && c.equals("red"))
				    x2=800;
					//Thread.sleep(20);
				    if(x2==800  && c.equals("green"))
				    x2--;
				   
		
			repaint();
			
			//Thread.holdsLock(t1);
			Thread.sleep(10);
		}
		
	if(Thread.currentThread()==t3)
		{
		
	
			Thread.sleep(2500);
			c="red";
			Thread.sleep(3500);
			//c1="green";
			//Thread.sleep(3500);
			c="green";
			Thread.sleep(3505);
			c="red";
			//Thread.sleep(3500);
			//c1="green";
		
		}
		
		
		if(Thread.currentThread()==t4)
		{
		
	
			Thread.sleep(2000);
			c1="red";
			Thread.sleep(3500);
			//c1="green";
			//Thread.sleep(3500);
			c1="green";
			Thread.sleep(3505);
			c1="red";
			Thread.sleep(3500);
			//c1="green";
			
		} 
	}
		catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
			
		repaint();
			
			
		}

	//}
	//
		
	//}
	

	
		}

}




