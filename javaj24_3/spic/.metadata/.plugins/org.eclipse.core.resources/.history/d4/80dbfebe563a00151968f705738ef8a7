package ch6;

public class DemoStringBuilder {
	
public  static  void  main(String  args[])
{
String  s=new  String("abc");
String s2=new  String("abc");
StringBuffer  s1=new  StringBuffer("abchgfds");
StringBuilder  b3=  new  StringBuilder("gjhkjka");
StringBuilder  b4=  new  StringBuilder("78");
System.out.println("capacity initialized for   string  builder  is is"+b4);
System.out.println("appended  string  is"+ b3.append("xyz"));
System.out.println("capacity"+b3.capacity());
System.out.println("character  at  2  locatiobn  is"+b3.charAt(2));
System.out.println("remove  character  at  5  and  6  location "+b3.delete(5,6));
System.out.println("String  representation  is"+b3.insert(0, "sahjha"));
System.out.println("length  of  the  string  builder  is"+b3.length());
System.out.println("replacement  is"+b3.replace(0,2,"hgf"));
System.out.println("reverse  is"+b3.reverse());
System.out.println("substring  is "+b3.substring(3));
System.out.println("substring  is "+b3.substring(3,7));
System.out.println("substring  is "+b3.toString());

if(s==s2)
{
System.out.println("equals");
}   

else 
	
System.out.println("not  equals");

if(s.equals(s2))
		{
System.out.println("equals");
}   
else
{
	System.out.println("not  equals");
}

if(s.equals(s1))
{
System.out.println("Equals");
}
else 
{
	System.out.println("not  equals");

}
System.out.println("location  for  s  is="+s.hashCode());
System.out.println("location  for  s2  is="+s2.hashCode());
System.out.println("location  for  s1  is=="+s1.hashCode());
System.out.println("location  for  b3  is=="+b3.hashCode());
}
}
