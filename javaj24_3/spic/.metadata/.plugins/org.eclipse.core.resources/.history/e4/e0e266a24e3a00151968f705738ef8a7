package ch6;

import java.util.Scanner;

public class calculater {

	int a,b,c;
	public    int  add(int  a,int  b)
	{
		
		return c=a+b;
		System.out.println("addition  is"+c);
	}
	public    int  sub(int  a,int b)
	{
		
		return c=a-b;
	}
	public    int  mul(int  a,int  b)
	{
		
		return c=a*b;
	}
	public    int  div(int  a,int  b)
	{
		
		return c=a/b;
	}

 public  static  void  main(String args[])
 {
calculater  d=new  calculater();
	String  opration;
	Scanner s=new  Scanner(System.in);
	System.out.println("\n enter  the  opration  u  want  to    apply");
	opration=s.next();
	System.out.println("\n enter  the  two  numbers  u  want  to    apply");
	int  a=s.nextInt();
	int  b=s.nextInt();
		switch(opration)
	{
	case"add":
		d.add(a,b);
		System.out.println("adddition  of  the  two  no  is:"+c);
		break;
	case "sub":
		d.sub(a,b );
		System.out.println("subtraction   of  the  two  no  is:"+c);
		break;
	case "mul":
		d.mul(a,b);
		System.out.println("multiplication  of  the  two  no  is:"+c);
		break;
	case "division":
		d.div(a,b );
		System.out.println("division  of  the  two  no  is:"+c);
		break;
	case  "exit1":
	  System.exit(0);
	}
 }
	
 }

