package ch6;

import java.util.Scanner;

public class calculater {

	int a,b,c;
	public    int  add(int  a,int  b)
	{
		
		return c=a+b;
	}
	public    int  sub(int  a,int b)
	{
		
		return c=a-b;
	}
	public    int  mul(int  a,int  b)
	{
		
		return c=a*b;
	}
	public    int  div(int  a,int  b)
	{
		
		return c=a/b;
	}

 public  static  void  main(String args[])
 {
	 calculater  c=new  calculater();
	String  opration;
	System.out.println("\n enter  the  two  numbers  u  want  to    apply");
	Scanner s=new  Scanner(System.in);
	int  a=s.nextInt();
	int  b=s.nextInt();
		switch(opration)
	{
	case"add":
		c.add(8,8);
		break;
	case "sub":
		c.sub(23,454 );
		break;
	case "mul":
		c.mul(23,454 );
		break;
	case "division":
		c.div(23344,454 );
		break;
	case  "exit1":
	   exit 0;
	}
 }
	
 }

