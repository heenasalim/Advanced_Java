@Override
	public void run() {
		// TODO Auto-generated method stub
while(true)
{
	try
	{
		if(Thread.currentThread()==t1)
		{
			
			//Thread.holdsLock(t1);
			x1++;
			repaint();
			
		
			Thread.sleep(10);		
			
		}
		if(Thread.currentThread()==t2)
		{
			x2--;
			repaint();
			
			//Thread.holdsLock(t1);
			Thread.sleep(10);
		}
		if(Thread.currentThread()==t3)
		{
			
			
			
			//if(c==Color.red)
			{
			
			repaint();
		
			Thread.sleep(15);
			}
		}
		
	}
		
		catch(Exception e)
		{
			e.printStackTrace();
		}
	    
	//	if(Thread.currentThread()==t3)
