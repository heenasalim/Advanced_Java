package ch6;

import java.util.Scanner;

public class calculater {

	int a,b,c;
	public    int  add(int  a,int  b)
	{
		
		return c=a+b;
	}
	public    int  sub(int  a,int b)
	{
		
		return c=a-b;
	}
	public    int  mul(int  a,int  b)
	{
		
		return c=a*b;
	}
	public    int  div(int  a,int  b)
	{
		
		return c=a/b;
	}

 public  static  void  main(String args[])
 {
	 calculater  c=new  calculater();
	String  opration;
	System.out.println("\n enter  the  two  numbers  u  want  to    apply");
	Scanner s=new  Scanner(System.in);
	opration=s.next();
	System.out.println("\n enter  the  opration  u  want  to    apply");
	int  a=s.nextInt();
	int  b=s.nextInt();
		switch(opration)
	{
	case"add":
		c.add(a,b);
		break;
	case "sub":
		c.sub(a,b );
		break;
	case "mul":
		c.mul(a,b);
		break;
	case "division":
		c.div(a,b );
		break;
	case  "exit1":
	  System.exit(0);
	}
 }
	
 }

